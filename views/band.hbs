<h2 class="blue-header">Bands</h2>

<div class="band-listing">

</div>

<script type="text/template"id="band-list-template">
  <div class="row #ff5252 red accent-2">
    <div class="col s12">
      <div class="card #ff5252 red accent-2">
        <div class="card-content black-text">
          <span class="card-title">Band: <%= band_name %></span>
          <p>Email: <%= email %></p>
          <p>Website: <%= band_website %></p>
        </div>
      </div>
    </div>
  </div>
</script>

<script type="text/template" id="new-band-template">
  <form class="new-band-form">
    <label>Name</label>
    <input name="band_name" type="text"></input>
    <label>Email</label>
    <input name="email" type="email">
    <label>Password</label>
    <input name="password" type="password"></input>
    <label>Password Confirmation</label>
    <input name="password_confirmation" type="password"></input>
    <label>Website</label>
    <input name='band_website' type="text"></input>
    <label>Photo</label>
    <input name="photo_link" type="text">
    <button type="submit">Submit</button>
  </form>
</script>
