<h2 id="bands-header" class="blue-header">Bands</h2>

<div class="band-listing">

</div>

<script type="text/template"id="band-list-template">
  <div class="row #64b5f6 blue lighten-2">
    <div class="col s12">
      <div class="card #ff5252 red accent-2 z-depth-4">
        <div class="card-content black-text">
          <span class="card-title"><a href='/bands/<%= id %>'><%= band_name %></a></span>
          <p><%= email %></p>
          <p>Website: <a href="<%= band_website %>"><%= band_website %></a></p>
        </div>
      </div>
    </div>
  </div>
</script>

<script type="text/template" id="new-band-template">
  <form class="new-band-form">
    <div class="input-field col s6">
      <label>Name</label>
      <input id="register-name" name="band_name" type="text"></input>
    </div>
    <div class="input-field col s6">
      <label>Email</label>
      <input id="register-email" name="email" type="email">
    </div>
    <div class="input-field col s6">
      <label>Password</label>
      <input id="register-password" name="password" type="password"></input>
    </div>
    <div class="input-field col s6">
      <label>Password Confirmation</label>
      <input id="register-password-confirm" name="password_confirmation" type="password"></input>
    </div>
    <div class="input-field col s6">
      <label>Website</label>
      <input id="register-website" name='band_website' type="text"></input>
    </div>
    <div class="input-field col s6">
      <label>Photo</label>
      <input id="register-photo" name="photo_link" type="text">
    </div>
    <div class="input-field col s6">
      <button id='band-register' class="waves-effect waves-light btn">Submit</button>
    </div>

  </form>
</script>
