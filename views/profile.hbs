<script type="text/template" id="band-header">
  <h3 class="blue-header"><%= band_name %></h3>
  <div class="row">
        <div class="col s5">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <p>Email: <%= email %></p>
              <p>Website: <a href="<%= band_website %>"><%= band_website %></p></a>
            </div>
          </div>
        </div>
        <div class="showpage-poster col s4">
          <img src="http://i.imgur.com/B3nAM6x.jpg?1">
          <!-- <img src="<%= photo_link %>"> -->
        </div>
      </div>
</script>

<script type="text/template" id="band-body">
  <div class="row">
    <div id="main-listing" class="col s10">
      <div class="card large z-depth-3">
        <div class="card-image valign-wrapper">
          <% if (poster_link != null) {%>
          <img src="<%= poster_link %>"
         <% } else { %>
          <img src="http://i.imgur.com/B3nAM6x.jpg?1">
          <% } %>
          </div>
          <div class="card-content  #ff5252 red accent-2 black-text">
            <a href='/show/<%= id %>'><h2 class="card-title"><%= title %></h2></a>
            <a href='/venue/<%= venue_id %>'><h4 class="venue_listing"><%= venue_name %></h4></a>
            <p><%= date %></p>
          </div>
        </div>
      </div>
    </div>
</script>

<script type="text/template" id="edit-band-template">
  <form class="edit-band-form">
    <label>Edit Email</label>
    <input name="email" type="email">
    <label>Edit Website</label>
    <input name='band_website' type="text"></input>
    <label>Photo</label>
    <input name="photo_link" type="text">
    <button id"edit-band-form" type="submit">Submit</button>
  </form>
</script>

