<script type="text/template" id="venue-header">
  <h3 class="blue-header"><%= venue_name %></h3>
  <div class="row">
        <div class="col s5">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <p><%= address %></p>
              <a href="<%= venue_website %>"><p><%= venue_website %></p></a>
            </div>
          </div>
        </div>
      </div>
</script>

<script type="text/template" id="venue-body">
  <div class="row">
    <div id="main-listing" class="col s10">
      <div class="card large z-depth-3">
        <div class="card-image valign-wrapper">
          <% if (poster_link != null) {%>
          <img src="<%= poster_link %>"
         <% } else { %>
          <img src="http://i.imgur.com/B3nAM6x.jpg?1">
          <% } %>
          </div>
          <div class="card-content  #ff5252 red accent-2 black-text">
            <a href='/show/<%= id %>'><h2 class="card-title"><%= title %></h2></a>
            <p><%= date %></p>
          </div>
        </div>
      </div>
    </div>
</script>

<script type="text/template" id="edit-venue-template">
  <form class="edit-venue-form">
    <label>Address</label>
    <input name="address" type="text">
    <label>Website</label>
    <input name='venue_website' type="text"></input>
    <button type="submit">Submit</button>
  </form>
</script>

<script type="text/javascript">

app.VenueView = Backbone.View.extend({
  initialize: function() {
    console.log(this.model);
    this.model.on('sync', this.render, this)
  },
  render: function() {
    var options = {
      id: this.model.id
    }
    this.template = _.template($('#venue-header').html());
    var data = this.model.attributes;
    console.log(data);
    this.$el.html(this.template(data));
  }
})
</script>
